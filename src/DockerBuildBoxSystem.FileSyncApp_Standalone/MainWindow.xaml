<Window x:Class="FileWatcherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directory Watcher" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Path input -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="PathTextBox" Width="600" Margin="0,0,10,0" />
            <Button Content="Start watching" Width="150" Click="StartWatching_Click"/>
            <Button Content="Force sync" Width="150" Click="ForceSync_Click"/>
            <Button Content="Clean" Width="150" Click="Clean_Click"/>
        </StackPanel>

        <!-- Ignore patterns -->
        <GroupBox Header="Ignore Patterns (one per line, supports wildcards)" Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="IgnorePatternsBox" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas"
                     Text="bin/\nobj/\n*.tmp" />
        </GroupBox>

        <!-- Changes list -->
        <GroupBox Header="Detected Changes" Grid.Row="2">
            <ListBox x:Name="ChangesList" FontFamily="Consolas" />
        </GroupBox>
    </Grid>
</Window>
