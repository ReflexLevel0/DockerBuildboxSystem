<UserControl x:Class="DockerBuildBoxSystem.App.UserControls.ContainerConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DockerBuildBoxSystem.App.UserControls"
             xmlns:vm="clr-namespace:DockerBuildBoxSystem.ViewModels.ViewModels;assembly=DockerBuildBoxSystem.ViewModels" xmlns:viewmodels="clr-namespace:DockerBuildBoxSystem.ViewModels.ViewModels;assembly=DockerBuildBoxSystem.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:ContainerConsoleViewModel, IsDesignTimeCreatable=False}"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Container Selector -->
        <Grid Grid.Row="0" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Container:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,6,0"/>
            
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding Containers}"
                      SelectedItem="{Binding SelectedContainer}"
                      IsEnabled="{Binding IsLoadingContainers, Converter={StaticResource InverseBooleanConverter}}"
                      MinWidth="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Names[0]}" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding State}" Foreground="Gray" Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="running">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="exited">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Image}" Foreground="DarkGray" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <CheckBox Grid.Column="2" 
                      Content="Show All" 
                      IsChecked="{Binding ShowAllContainers}"
                      VerticalAlignment="Center"
                      Margin="6,0,6,0"/>
            
            <Button Grid.Column="3" 
                    Content="Refresh" 
                    Command="{Binding RefreshContainersCommand}"
                    Padding="8,4"
                    MinWidth="70"/>
        </Grid>

        <!-- Output -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#111"
                      x:Name="OutputScroller">
            <ItemsControl ItemsSource="{Binding Lines}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontFamily="Consolas" FontSize="13">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#ddd"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="True">
                                            <Setter Property="Foreground" Value="#ff4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="{Binding Timestamp, StringFormat='[{0:HH:mm:ss}]'}" Foreground="#888"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Text}"/>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="6,6,6,0"
                    HorizontalAlignment="Left">
            <Button Content="Start Logs" 
                    Command="{Binding StartLogsCommand}"
                    Padding="8,4"
                    Margin="0,0,6,0"
                    MinWidth="80"/>
            <Button Content="Stop Logs" 
                    Command="{Binding StopLogsCommand}"
                    Padding="8,4"
                    Margin="0,0,6,0"
                    MinWidth="80"/>
            <Button Content="Clear" 
                    Command="{Binding ClearCommand}"
                    Padding="8,4"
                    MinWidth="70"/>
        </StackPanel>

        <!-- Input -->
        <Grid Grid.Row="3" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="Input"
                 Grid.Column="0"
                 FontFamily="Consolas"
                 FontSize="13"
                 Margin="0,0,6,0"
                 Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SendCommand}" />
                </TextBox.InputBindings>
            </TextBox>
            
            <Button Grid.Column="1"
                    Content="Send"
                    Padding="12,4"
                    Command="{Binding SendCommand}" />
        </Grid>
    </Grid>
</UserControl>
