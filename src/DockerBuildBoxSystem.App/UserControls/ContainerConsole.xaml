<UserControl x:Class="DockerBuildBoxSystem.App.UserControls.ContainerConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DockerBuildBoxSystem.App.UserControls"
             xmlns:converters="clr-namespace:DockerBuildBoxSystem.App.Converters"
             xmlns:vm="clr-namespace:DockerBuildBoxSystem.ViewModels.ViewModels;assembly=DockerBuildBoxSystem.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ContainerConsoleViewModel, IsDesignTimeCreatable=False}"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded">

    <UserControl.Resources>
        <converters:StateToColorConverter x:Key="StateToColorConverter" />
        <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- User Controls -->
        <ItemsControl Grid.Row="0"
                      ItemsSource="{Binding UserControls.UserControls}"
                      Margin="0,0,0,6">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.Resources>
                <!--Template for buttons-->
                <DataTemplate DataType="{x:Type vm:ButtonViewModel}">
                    <!--Global button styles in App/resources/styles.xaml-->
                    <Button Style="{StaticResource FlatIconButton}"
                            ToolTip="{Binding Definition.Tooltip}"
                            Command="{Binding DataContext.Commands.RunUserCommandCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding Definition}"
                            Width="30" Height="30">
                        <Image Source="{Binding Definition.IconPath}" Width="20" Height="20"/>
                    </Button>
                </DataTemplate>

                <!--Template for dropdown-->
                <DataTemplate DataType="{x:Type vm:DropdownViewModel}">
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock Text="{Binding Label}"
                                   Margin="0,0,4,0"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   />
                        <ComboBox ItemsSource="{Binding Values}"
                              SelectedItem="{Binding SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Width="80" Height="30"
                              ToolTip="{Binding Definition.Tooltip}"
                              Padding="6"
                              IsEnabled="{Binding DataContext.Commands.CanUseUserControls, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>
                    </StackPanel>
                </DataTemplate>

                <!--Template for TextBox-->
                <DataTemplate DataType="{x:Type vm:TextBoxViewModel}">
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock Text="{Binding Label}"
                                   Margin="4,0,4,0"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="{Binding Id}"
                                 Width="160"
                                 Height="30"
                                 Padding="6"
                                 ToolTip="{Binding Definition.Tooltip}"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsEnabled="{Binding DataContext.Commands.CanUseUserControls, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="{Binding Definition.Tooltip}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.Resources>
        </ItemsControl>

        <!-- Output TextBox -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <TextBox x:Name="TerminalOutput" 
                     Style="{StaticResource TerminalTextBoxStyle}" 
                     IsReadOnly="True" 
                     AcceptsReturn="True" 
                     IsUndoEnabled="False"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     Background="{StaticResource ContainerBackgroundBrush}"/>
            <StackPanel Orientation="Horizontal" Margin="8" VerticalAlignment="Top" HorizontalAlignment="Right">
                <!-- Copy and Clear Buttons -->
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Command="{Binding CopyCommand}"
                        Padding="4,2"
                        Width="30" Height="30"
                        Margin="0,0,6,0"
                        ToolTip="Copy terminal output to clipboard">
                    <Image Source="pack://application:,,,/Assets/icons/copy.png"
                           Width="20"
                           Height="20"/>
                </Button>
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Command="{Binding ClearCommand}"
                        Padding="4,2"
                        Width="30" Height="30"
                        ToolTip="Clear the terminal output">
                    <Image Source="pack://application:,,,/Assets/icons/clear.png"
                           Width="20"
                           Height="20"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Input -->
        <Grid Grid.Row="2" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="Input"
                 Grid.Column="0"
                 FontFamily="Consolas"
                 FontSize="13"
                 Margin="0,0,6,0"
                 Text="{Binding Commands.Input, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Type your command here">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding Commands.SendCommand}" />
                </TextBox.InputBindings>
            </TextBox>
            <!-- Send Button -->
            <Button Grid.Column="1"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Padding="0"
                    Width="30" Height="30"
                    ToolTip="Send the input to the container"
                    Command="{Binding Commands.SendCommand}">
                <Image Source="pack://application:,,,/Assets/icons/send.png"
                       Width="20"
                       Height="20"/>
            </Button>
            <!-- Ctrl + c Button -->
            <Button Grid.Column="2"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Content="Ctrl+C"
                    Height="30"
                    Padding="12,4"
                    Margin="6,0,0,0"
                    ToolTip="Stop the running command in the container"
                    Cursor="Hand"
                    Command="{Binding Commands.InterruptExecCommand}"
                    />

            <!-- Container status indicator -->
            <Grid Grid.Column="3"
                    ToolTip="Indicates the state of the selected container (Running, Exited, etc.)">
                <Ellipse Width="15" 
                         Height="15" 
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Fill="{Binding ContainerList.SelectedContainer.StateKind,
                                Converter={StaticResource StateToColorConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
