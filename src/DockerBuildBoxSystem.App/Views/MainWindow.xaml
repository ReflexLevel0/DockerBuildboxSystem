<Window x:Class="DockerBuildBoxSystem.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockerBuildBoxSystem.App"
        xmlns:vm="clr-namespace:DockerBuildBoxSystem.ViewModels.Main;assembly=DockerBuildBoxSystem.ViewModels"
        xmlns:uc="clr-namespace:DockerBuildBoxSystem.App.UserControls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Sync">
                <MenuItem Header="Sync _In..." Command="{Binding SelectSourcePathCommand}" />
                <MenuItem Header="Sync _Out..." Command="{Binding SelectSyncOutPathCommand}" />
                <Separator/>
                <MenuItem Header="_Force Sync"
                        Command="{Binding ElementName=ContainerConsoleControl, Path=DataContext.StartForceSyncCommand}" />
            </MenuItem>
        </Menu>

        <!-- Header with Title, Select Source Button and Path Display -->
        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                    Grid.Column="0"
                    Text="Buildbox Manager"
                    FontSize="18"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="0,0,25,0" />

            <Button
                    Grid.Column="1"
                    MinWidth="32"
                    Padding="2,2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SelectSourcePathCommand}"
                    Focusable="False"
                    ToolTip="Choose sync-in folder"
                    Margin="0,0,4,0">
                <Grid>
                    <!-- Base folder icon -->
                    <TextBlock
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="22"
                            Text="&#xE838;"
                            Foreground="#FFC107" />
                    <!-- Modern green tick overlay with circular background -->
                    <Border
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0"
                            Width="14"
                            Height="14"
                            Background="#FF2ECC71"
                            CornerRadius="7">
                        <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="12"
                                Text="&#xE73E;"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </Button>

            <!-- SyncOut picker and read-only path -->
            <Button
                    Grid.Column="2"
                    MinWidth="32"
                    Padding="2,2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SelectSyncOutPathCommand}"
                    Focusable="False"
                    ToolTip="Choose sync-out folder"
                    Margin="8,0,4,0">
                <Grid>
                    <!-- Base folder icon -->
                    <TextBlock
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="22"
                            Text="&#xE838;"
                            Foreground="#FFC107" />
                    <!-- Modern red cross overlay with circular background -->
                    <Border
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0"
                            Width="14"
                            Height="14"
                            Background="#FFE74C3C"
                            CornerRadius="7">
                        <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="12"
                                Text="&#xE711;"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </Button>
        </Grid>
        <!-- Grid for .env and syncIgnore -->
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content=".env"
                                ToolTip="Edit Environmental Variables"
                                Padding="8,4"
                                Margin="0,0,6,0"
                                Command="{Binding EnvironmentVM.OpenEnvFileCommand}"
                                Width="40">
                </Button>
                <Button Content="syncIgnore"
                            ToolTip="Edit syncIgnore file"
                            Padding="8,4"
                            Margin="0,0,6,0"
                            Command="{Binding OpenSyncIgnoreFileCommand}"
                            Width="80">
                </Button>
            </StackPanel>
        </Grid>

        <!--  Main Content Area - the UserControl is responsible for its own ViewModel lifecycle  -->
        <uc:ContainerConsole x:Name="ContainerConsoleControl" Grid.Row="3" />

        <!-- Footer with Exit Button -->
        <Grid Grid.Row="4" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Sync In -->
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock Text="Sync In: "
                   FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SourcePath}"
                   TextTrimming="CharacterEllipsis"
                   ToolTip="{Binding SourcePath}"
                   Foreground="Gray"/>
            </StackPanel>

            <!-- Sync Out -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,2,0,0">
                <TextBlock Text="Sync Out: "
                   FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SyncOutPath}"
                   TextTrimming="CharacterEllipsis"
                   ToolTip="{Binding SyncOutPath}"
                   Foreground="Gray"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
